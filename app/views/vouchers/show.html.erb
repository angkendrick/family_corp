<div class="row">
  <div class="col-md-4">
    <h1>Show Voucher</h1>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <h1>
    <%= link_to company_vouchers_path, class: 'btn btn-primary', title: 'Back', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span class="glyphicon glyphicon-step-backward"></span>
    <% end %> &nbsp;
    <%= link_to edit_company_voucher_path(@company, @voucher), class: 'btn btn-primary', title: 'Edit', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span class="glyphicon glyphicon-pencil"></span>
    <% end %> &nbsp;
    <%= link_to "#{generate_pdf_url}", class: 'btn btn-primary', title: 'Print Voucher', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
      <span class="glyphicon glyphicon-print"></span>
    <% end %>
    </h1>
  </div>
</div>
<br>
<br>
<div class="row">

  <div class="col-md-4">


      <div class="row">
        <div class="col-md-4">
           Paid To:
        </div>
        <div class="col-md-7">
          <%= @voucher.customer.name %>
        </div>
      </div>



      <div class="row">
        <div class="col-md-4">
          Account:
        </div>
        <div class="col-md-7">
          <%= @voucher.account.title %>
        </div>
      </div>



      <div class="row">
        <div class="col-md-4">
          Department
        </div>
        <div class="col-md-7">
          <%= @voucher.department.name %>
        </div>
      </div>



      <div class="row">
        <div class="col-md-4">
          Bank:
        </div>
        <div class="col-md-7">
          <%= @voucher.bank.name if @voucher.bank %>
        </div>
      </div>

      <br>

      <div class="row">
        <div class="col-md-4">
          Checked by:
        </div>
        <div class="col-md-7">
          <%= @voucher.checked_by.first_name if @voucher.checked_by %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4">
          Approved by:
        </div>
        <div class="col-md-7">
          <%= @voucher.approved_by.first_name if @voucher.approved_by %>
        </div>
      </div>




  </div>



  <div class="col-md-3 col-md-offset-3">
    PO# <%= @voucher.purchase_order %><br>
    CN# <%= @voucher.confirmation_number %><br>
    AN# <%= @voucher.approval_number %><br>
    CK# <%= @voucher.cheque_number %><br>
    CK Date: <%= @voucher.cheque_date %>
  </div>

</div>

<br>

<div class="row">
  <div class="col-md-8">
    <div class="form-group">
      <div class="row">
        <div class="col-md-2">
          Description:
        </div>
        <div class="col-md-8">
          <%= @voucher.description %>
        </div>
      </div>
    </div>
  </div>
</div>


<h3>Particulars</h3>
<table class="table table-bordered">
  <% @voucher.particulars.each do |particular| %>
    <tr>
      <td><%= particular.description %></td>
      <td><%= particular.amount ? number_with_delimiter('%.2f' % particular.amount) : 0.00 %></td>
    </tr>
  <% end %>
</table>

<p>
  <strong>Total:</strong>
  <%= sum_hash(@voucher.particulars) %> Pesos
</p>

<hr>

<%= image_tag @voucher.cheque_image.url, class: 'img-rounded' %>

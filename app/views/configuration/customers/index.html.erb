<h1>Listing Suppliers</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= link_to 'Show', [:configuration, customer] %></td>
        <td><%= link_to 'Edit', edit_configuration_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', [:configuration, customer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @customers %>

<br>

<%= link_to 'New Supplier', new_configuration_customer_path %>

<h1>List Purchase Orders</h1>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Date</th>
    <th>PO</th>
    <th>CN</th>
    <th>Supplier</th>
    <th>Usage</th>
    <th>Department</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @purchase_orders.each do |po| %>
    <tr>
      <td><%= po.created_at %></td>
      <td><%= po.purchase_order %></td>
      <td><%= po.confirmation_number %></td>
      <td><%= po.customer.name %></td>
      <td><%= po.asset.name %></td>
      <td><%= po.department.name %></td>
      <td><%= link_to 'Show', company_purchase_order_path(@company, po) %></td>
      <td><%= link_to 'Destroy', company_purchase_order_path(@company, po), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= paginate @purchase_orders %>
<div class="row">
  <div class="col-md-4">
    <h1>Show Purchase Order</h1>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <h1>
      <%= link_to company_purchase_orders_path, class: 'btn btn-primary', title: 'Back', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
        <span class="glyphicon glyphicon-step-backward"></span>
      <% end %> &nbsp;
      <%= link_to '#',  class: 'btn btn-primary', title: 'Print Voucher', 'data-toggle' => 'tooltip', 'data-placement' => 'right' do %>
        <span class="glyphicon glyphicon-print"></span>
      <% end %>
    </h1>
  </div>
</div>

<div class="row">

  <div class="col-md-4">

    <div class="row">
      <div class="col-md-4">
        Paid To:
      </div>
      <div class="col-md-7">
        <%= @purchase_order.purchase_order %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        Confirmation #
      </div>
      <div class="col-md-7">
        <%= @purchase_order.confirmation_number %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        Supplier :
      </div>
      <div class="col-md-7">
        <%= @purchase_order.customer.name %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        Asset :
      </div>
      <div class="col-md-7">
        <%= @purchase_order.asset.name %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        Department :
      </div>
      <div class="col-md-7">
        <%= @purchase_order.department.name %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        Requested by:
      </div>
      <div class="col-md-7">
        <%= @purchase_order.requested_by.first_name %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        Approved by:
      </div>
      <div class="col-md-7">
        <%= @purchase_order.approved_by.first_name %>
      </div>
    </div>

    <h3>Particulars</h3>
    <table class="table table-bordered">
      <% @purchase_order.requisition_particulars.each do |particular| %>
        <tr>
          <td><%= particular.quantity %></td>
          <td><%= particular.measurement.name %></td>
          <td><%= particular.description %></td>
          <td><%= particular.amount ? number_with_delimiter('%.2f' % particular.amount) : 0.00 %></td>
        </tr>
      <% end %>
    </table>

  </div>
</div>
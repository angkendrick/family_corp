<div class="nested-fields">

  <div class="row">
    <div class="col-md-10">
      <div class="row">
        <div class="col-md-1">
          <%= link_to_remove_association 'remove', f, :class => "label label-danger" %>
        </div>
      </div>

      <div class="row">

        <div class="form-group">
          <div class="col-md-1">
            <%= f.label :Quantity %>
          </div>
          <div class="col-md-1">
            <%= f.number_field :quantity, class: 'form-control' %>
          </div>

          <div class="form-group">
            <div class="col-md-1">
              <%= f.label :unit %>
            </div>
            <div class="col-md-2">
              <%= f.collection_select(:measurement_id, Measurement.all, :id, :name, {} ,{class: "form-control"}) %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-1">
              <%= f.label :amount %>
            </div>
            <div class="col-md-2">
              <%= f.number_field :amount, class: 'form-control', step: 'any' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-10">
              <div class="row">

                <div class="form-group">
                <div class="col-md-1">
                  <%= f.label :description %>
                </div>
                <div class="col-md-6">
                  <%= f.text_field :description, class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>
        </div>



      </div>
    </div>
  </div>

</div>
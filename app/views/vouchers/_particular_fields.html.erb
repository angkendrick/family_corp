<div class="nested-fields">

  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <div class="row">
          <div class="col-md-2">
            <%= f.label :particular %>
          </div>
          <div class="col-md-7">
            <% if @voucher.editable %>
              <%= f.text_field :description, class: 'form-control' %>
            <% else %>
              <%= f.text_field :description, class: 'form-control', disabled: true %>
            <% end %>

          </div>
          <div class="form-group">
            <div class="col-md-1">
              <%= f.label :amount %>
            </div>
            <div class="col-md-2">
              <% if @voucher.editable %>
                <%= f.number_field :amount, class: 'form-control', step: 'any' %>
              <% else %>
                <%= f.number_field :amount, class: 'form-control', step: 'any', disabled: true %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<%= form_for(@voucher) do |f| %>
  <% if @voucher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@voucher.errors.count, "error") %> prohibited this voucher from being saved:</h2>

      <ul>
      <% @voucher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :customer_id %><br>
    <%= f.collection_select :customer_id, Customer.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :purchase_order %><br>
    <%= f.number_field :purchase_order %>
  </div>
  <div class="field">
    <%= f.label :confirmation_number %><br>
    <%= f.number_field :confirmation_number %>
  </div>
  <div class="field">
    <%= f.label :account_id %><br>
    <%= f.collection_select :account_id, Account.all, :id, :title %>
  </div>
  <div class="field">
    <%= f.label :department_id %><br>
    <%= f.collection_select :department_id, Department.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :bank_id %><br>
    <%= f.collection_select :bank_id, Bank.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :cheque_number %><br>
    <%= f.number_field :cheque_number %>
  </div>
  <div class="field">
    <%= f.label :cheque_date %><br>
    <%= f.date_select :cheque_date %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <hr>
  <div id="particulars">
    <%= f.fields_for :particulars do |particular| %>
      <%= render 'vouchers/particular_fields', f: particular %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add a particular', f, :particulars %>
    </div>
    <hr>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Vouchers</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Bank</th>
      <th>Purchase order</th>
      <th>Confirmation number</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.customer %></td>
        <td><%= voucher.bank %></td>
        <td><%= voucher.purchase_order %></td>
        <td><%= voucher.confirmation_number %></td>
        <td><%= voucher.description %></td>
        <td><%= link_to 'Show', voucher %></td>
        <td><%= link_to 'Edit', edit_voucher_path(voucher) %></td>
        <td><%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


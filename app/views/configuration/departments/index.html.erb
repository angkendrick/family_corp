<h1>Listing Departments</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= link_to 'Show', [:configuration, department] %></td>
        <td><%= link_to 'Edit', edit_configuration_department_path(department) %></td>
        <td><%= link_to 'Destroy', [:configuration, department], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @departments %>

<br>

<%= link_to 'New Department', new_configuration_department_path %>
